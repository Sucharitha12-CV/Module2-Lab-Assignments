package com.cg.ma.service;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cg.ma.entity.Movie;
import com.cg.ma.repository.IMovieRepository; 
@Service
public class MovieService {
	@Autowired
	private IMovieRepository movieRepository;
	
	public Movie saveTrainee(Movie movie) {		
		
			return movieRepository.save(movie);
		
	}	
		
	public void deleteMovie(int movieId) {

		movieRepository.delete(movieId);
	}
			
	public Movie updateTrainee(Movie movie) { 
		return movieRepository.save(movie);

	}

		 
	public Iterable<Movie> listAllTrainees(){
		return movieRepository.findAll(); 
	}
				
	public Movie listTraineeByName(String traineeName){ 
		return movieRepository.findByMovieName(traineeName);
	} 
	

}
